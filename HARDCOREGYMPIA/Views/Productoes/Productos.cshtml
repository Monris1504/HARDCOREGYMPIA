@model IEnumerable<HARDCOREGYMPIA.Models.dbModels.Producto>

@{
    ViewData["Title"] = "Productos";
}
@section Css {
    <link rel="stylesheet" href="~/css/Roles.css" rel="stylesheet" />
}
<h1>MENU ADMINISTRADOR</h1>
<br>
<div class="col-md-12" id="opcionesadmin">
    <a asp-controller="ApplicationUsers" asp-action="Usuarios"><input type="button" class="botonesdecambiodepagina" id="btn-usuariorol" value="Usuario y rol"></a>
    <a asp-controller="Productoes" asp-action="Productos"><input type="button" class="botonesdecambiodepagina" id="btn-productos" value="Productos"></a>
</div>

<br />
<br />
<div class="centrartabla">
    <table id="tabla" class="table table-striped table-dark">
        <thead>
            <tr class="centro">
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Imagen</th>
                <th scope="col"><a asp-action="Create">Create New</a></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Nombre)</th>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Precio)</th>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Descripcion)</th>
                    <th scope="row"><img class="w-25" src="@Html.DisplayFor(modelItem => item.Image)" /></th>
                    <th scope="row">
                        <a asp-action="Edit" asp-route-id="@item.Idproducto">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.Idproducto">Details</a> 
                        <a asp-action="Delete" asp-route-id="@item.Idproducto">Delete</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
