@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <div>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("INICIO", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
    </div>
        
}
else
{
    <div>
        <a asp-area="Identity" asp-page="/Account/Register"><input type="button" class="btn-usuario" id="btn-iniciarsesion" value="Registrarse"></a>
        <a asp-area="Identity" asp-page="/Account/Login"><input type="button" class="btn-usuario" id="btn-iniciarsesion" value="Iniciar Sesión"></a>
    </div>
}
</ul>
<style>
    .btn-usuario {
        background-color: #e1cbd7;
        border-radius: 10px;
        padding: 5px;
        border: 1px solid;
        width: 40%;
    }

        .btn-usuario:hover {
            background-color: lightcoral;
        }

    .carritonavbar{
        background-color: gold;
        border: 2px solid;
        border-radius: 10px;
        font-weight: 500;
        padding: 10px;
        text-decoration: none;
        color: black;
    }
</style>