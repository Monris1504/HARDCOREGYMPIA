@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section Css {
    <link rel="stylesheet" href="~/css/Login.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div id="caja2">
                    <div id="caja1">
                        <img id="logo" src="~/IMG/logo.png" alt="">
                        <p id="sesion">INICIAR SESIÓN</p>
                    </div>
                    <br>
                    <p>Ingresa tus datos</p>
                    <div class="col-md-12">
                        <input asp-for="Input.Email" class="datos" type="text" placeholder="Correro electronico">
                        <br>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <br>
                        <input asp-for="Input.Password" class="datos" type="text" placeholder="Contraseña">
                        <br>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <br><br>
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <br>
                    <p id="redireccion">¿No tienes cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crea una</a></p>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Iniciar Sesion</button>
                </div>
            </form>
        </section>
    </div>
</div>
<br />
<br />
<br />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
